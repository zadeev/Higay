<h1>Listing bands</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Logo</th>
      <th>Genre</th>
      <th>Description</th>
      <th>Musicians</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.title %></td>
        <td><%= band.logo %></td>
        <td><%= band.genre %></td>
        <td><%= band.description %></td>
        <td><%= band.musicians.first.name %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

